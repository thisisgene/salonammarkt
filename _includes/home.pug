  .home-wrapper
    a(href='#home').scroll-on-page-link.logo.no-select
      img(src='assets/img/logo_main.svg')
    .menu-wrapper
      ul.lang-menu.no-select
        li.lang-select.lang-select__left
          a.active DE
        li.li-sep /
        li.lang-select.langselect__right
          a(href='en') EN
      ul.link-menu.no-select
        li.li-item
          a(href='#gallery').scroll-on-page-link Gallerie
        li.li-item
          a(href='#service').scroll-on-page-link Service
        li.li-item
          a(href='#contact').scroll-on-page-link Kontakt
        li.li-item.li-booking
          a(href='#book') Termin buchen

